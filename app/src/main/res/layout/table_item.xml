<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/dialog_bg">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImage"
            android:layout_width="60dp"
            app:shapeAppearanceOverlay="@style/tableListItem"
            android:layout_marginStart="10dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:background="@color/light_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_table_bar_48" />

        <TextView
            android:id="@+id/listName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/listImage"
            android:layout_marginStart="30dp"
            android:text="Tavolo:"
            android:textColor="@color/dark_bg"
            android:textSize="28sp" />
        <TextView
            android:id="@+id/listNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/listName"
            android:layout_marginStart="10dp"
            android:text="1"
            android:textColor="@color/dark_bg"
            android:textSize="28sp" />
        <TextView
            android:id="@+id/listBill"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/listImage"
            android:layout_below="@id/listName"
            android:text="Totale: "
            android:textColor="@color/dark_bg"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/listPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/listBill"
            android:layout_below="@id/listNumber"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:text="1"
            android:textColor="@color/dark_bg"
            android:textSize="28sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>