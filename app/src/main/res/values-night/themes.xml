<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ratatouille23" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="android:windowBackground">@color/dark_bg</item>
        <item name="android:textColor">@color/light_bg</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/accent</item>
        <item name="boxStrokeColor">@color/accent</item>
        <item name="android:textColorHint">@color/light_bg</item>
        <item name="startIconTint">@color/accent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorEnabled">true</item>
        <item name="counterEnabled">false</item>
    </style>

    <style name="customIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/dialog_bg</item>
        <item name="labelBehavior">floating</item>
    </style>

    <style name="BottomBar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/round_back_home_light</item>
        <item name="itemActiveIndicatorStyle">@style/customIndicator</item>
        <item name="itemIconTint">@color/dark_bg</item>
        <item name="itemTextColor">@color/dark_bg</item>
        <item name="iconSize">30sp</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ButtonHighHighEmphasis" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:buttonStyle">@style/Widget.Material3.Button.ElevatedButton</item>
        <item name="android:backgroundTint">@color/brand_color</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="cornerRadius">5sp</item>
    </style>

    <style name="ButtonHighLowEmphasis" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:buttonStyle">@style/Widget.Material3.Button.ElevatedButton</item>
        <item name="android:backgroundTint">@color/brand_color_low_emphasis</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="cornerRadius">5sp</item>
    </style>
</resources>